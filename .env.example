# Application Settings
APP_NAME=Atticus
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Blender Settings
BLENDER_PATH=blender
BLENDER_SCRIPTS_PATH=./blender_scripts

# Redis Settings (for Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=3600

# Storage Settings
STORAGE_PATH=./storage
UPLOAD_PATH=./storage/uploads
TEMP_PATH=./storage/temp
RESULTS_PATH=./storage/results
MAX_FILE_SIZE=104857600

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Security Settings
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Task Settings
TASK_CLEANUP_INTERVAL=3600
TEMP_FILE_TTL=86400

# Tencent Cloud Settings
TENCENTCLOUD_SECRET_ID=your-tencent-secret-id
TENCENTCLOUD_SECRET_KEY=your-tencent-secret-key
